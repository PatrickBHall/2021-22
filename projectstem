a = int(input("How many numbers do you need to check? "))
b = 0
c = 0
for a in range(0,a):
    d = int(input("Enter number: "))
    e = d%2
    if (e==1 or b==-1):
        print(str(d)+" is an odd number. ")
        b = b + 1
    elif (e==0):
        print (str(d)+ " is an even number. ")
        c = c + 1
print("You entered " + str(c) + " even number(s).")
print("You entered " + str(b) + " odd number(s).")
